
#include <iostream>
#include <vector>
#include <unordered_map>
using namespace std;

vector<pair<int,int>> xyz(vector<int>& arr , int k) {
    int n = arr.size();
    unordered_map<int,int> h; // value -> index
    vector<pair<int,int>> result;

    for (int i = 0; i < n; i++) {
        int num = arr[i];

        if (h.find(num + k) != h.end()) {
            result.push_back({h[num + k], i});
        }


        h[num] = i;
    }
    return result;
}

int main() {
    vector<int> arr = {1, 5, 3, 4, 2};
    int k = 2;

    vector<pair<int,int>> ans = xyz(arr, k);

    cout << "Pairs (indices): ";
    for (auto p : ans) {
        cout << "(" << p.first << "," << p.second << ") ";
    }
    cout << endl;

    cout << "Pairs (values): ";
    for (auto p : ans) {
        cout << "(" << arr[p.first] << "," << arr[p.second] << ") ";
    }
    cout << endl;

    cout << "Total count = " << ans.size() << endl;

    return 0;
}
