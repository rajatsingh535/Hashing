#include <iostream>
#include <vector>
#include <algorithm>
#include <climits> // Needed for INT_MAX

using namespace std;

int countLargestSubarray() {
    int n, k;
    cin >> n >> k;
    vector<int> a(n);

    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }

    int max_length = 0, count = 0;

    for (int i = 0; i < n; i++) {
        int sum = 0;
        for (int j = i; j < n; j++) {
            sum += a[j];

            if (sum == k) {
                int len = j - i + 1;

                if (len > max_length) {
                    max_length = max(max_length, len);
                    count = 1;
                } else if (len == max_length) {
                    count++;
                }
            }
        }
    }

    return count;
}

int countshortSubarray() {
    int n, k;
    cin >> n >> k;
    vector<int> a(n);

    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }

    int min_length = INT_MAX;
    int count = 0;

    for (int i = 0; i < n; i++) {
        int sum = 0;
        for (int j = i; j < n; j++) {
            sum += a[j];

            if (sum == k) {
                int len = j - i + 1;

                if (len < min_length) {
                    min_length = min(min_length, len);
                    count = 1;
                } else if (len == min_length) {
                    count++;
                }
            }
        }
    }

    return count;
}

int main() {
    cout << "Longest count: " << countLargestSubarray() << endl;
    cout << "Shortest count: " << countshortSubarray() << endl;

    return 0;
}
